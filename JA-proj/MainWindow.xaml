<Window x:Class="JA_proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        Title="MainWindow" Height="535.2" Width="600">
    <StackPanel Background="#D3D3D3">

        <StackPanel Orientation="Horizontal" Height="100" Margin="0,10,0,10">

            <StackPanel VerticalAlignment="Center" Margin="10 0 0 10"  Height="78" HorizontalAlignment="Center" Width="132">
                <Label Foreground="#434443" FontSize="14" HorizontalAlignment="Left" Width="132" Content="Choose library"/>
                <RadioButton Foreground="#207559" FontSize="14" Content="ASM" />
                <RadioButton Foreground="#207559" FontSize="14" Content="C++"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 10 0 10" Width="112" Height="78">
                <Label Foreground="#434443" FontSize="14" HorizontalAlignment="Left" Width="132" Content="Number of threads"/>
                <xctk:IntegerUpDown/>
            </StackPanel>
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 0" Height="26" Width="40">
                <Label Foreground="#434443" FontSize="14" HorizontalAlignment="Left" Width="132" Content="Timer"/>
                <TextBlock> 00:00 </TextBlock>
            </StackPanel>
            <StackPanel Width=" 100" >
                <Button Margin="15,28" Width="70" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Content="Run" />
            </StackPanel>
        </StackPanel>


        <StackPanel Margin="0,0,0.4,0">
            <Grid>
                <Image Margin="0,-50,-0.4,0" Height="470" VerticalAlignment="Bottom"></Image>
                <Canvas AllowDrop="True" Background="#434443" Height="400"  Margin="10 10 10 10" Opacity="0.7"></Canvas>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#D3D3D3">Tu wrzucisz plik</TextBlock>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
